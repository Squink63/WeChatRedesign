<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_medium">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gcProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="@dimen/margin_small">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivContactProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/image2"
            android:scaleType="centerCrop"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aung Zeyar"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_regular_2x"
        android:layout_toEndOf="@id/gcProfile"
        android:layout_alignBottom="@id/gcProfile"
        android:layout_marginBottom="@dimen/margin_medium_3"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <CheckBox
        android:id="@+id/cbAddGroup"
        android:layout_width="@dimen/margin_medium_2"
        android:layout_height="@dimen/margin_medium_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_medium_2"
        />

</RelativeLayout>